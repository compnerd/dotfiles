# .gitconfig
# Copyright (c) 2010-2012 Saleem Abdulrasool <compnerd@compnerd.org>
# vim: set ft=gitconfig sts=4 sw=4 ts=8 :

[alias]
    changes = diff --name-status -r
    diffstat = diff --stat -r
    changelog = log --stat $(git describe --abbrev=0)..HEAD
    ls-ignored = ls-files --exclude-standard --ignored --others

[apply]
    whitespace = fix

[branch]
    autosetupmerge = true
    autosetuprebase = always
    sort = -committerdate

[core]
    attributesfile = ~/.gitattributes
    editor = vim
    excludesfile = ~/.gitignore
    symlink = true

[diff]
    algorithm = histogram
    colormoved = plain
    renames = copies

[help]
    autocorrect = 1

[merge]
    stat = true
    tool = vimdiff

[push]
    default = simple

[rebase]
    stat = true
    autosquash = true
    autostash = true
    updaterefs = true

[rerere]
    enabled = true
    autoupdate = true

[sendemail]
    chainreplyto = true

[tag]
    sort = version:refname

[url "ssh://git@git.exherbo.org/"]
    insteadof = exherbo:

[url "git://git.fedorahosted.org/"]
    insteadof = fedora:

[url "git://anongit.freedesktop.org/"]
    insteadof = freedesktop:

[url "git@github.com:"]
    insteadof = github:

[url "git://sourceware.org/git/"]
    insteadof = sourceware:

